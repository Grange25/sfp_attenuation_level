<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchor_pane" snapToPixel="false"
            xmlns="http://javafx.com/javafx/version 8.0.241" fx:controller="ru.level.attenuation.sfp.Controller">

    <children>
        <VBox fx:id="vBox" fillWidth="false" onDragDropped="#onDragDropped" onDragOver="#onDragOver"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">

            <children>

                <CheckBox fx:id="check_box" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false"
                          text="оставить только последний результат" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>

                    </VBox.margin>
                </CheckBox>

                <Button fx:id="buttonM" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false"
                        text="открыть файл csv" textAlignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>

                <TextArea id="vBox" fx:id="text_area" promptText="Холодным кубиком льда кинь в меня"
                          VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
</AnchorPane>
