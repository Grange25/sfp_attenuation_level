<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchor_pane" snapToPixel="false"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ru.level.attenuation.sfp.Controller">

    <children>
        <VBox fx:id="vBox" fillWidth="false" onDragDropped="#onDragDropped" onDragOver="#onDragOver"
              styleClass="text-area" stylesheets="@style/style.css" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <CheckBox fx:id="check_box" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false"
                          text="оставить только последний результат" textAlignment="CENTER">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </CheckBox>
                <Button fx:id="buttonM" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false"
                        text="открыть файл csv" textAlignment="CENTER">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <TextArea fx:id="text_area" prefHeight="640.0" prefWidth="480.0"
                          promptText="Холодный кубик льда - кинь в меня!" styleClass="text"
                          stylesheets="@style/style.css">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
    </children>
</AnchorPane>
